<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelsActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnLevel1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level1"
            android:text="Level 1"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnLevel2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level2"
            android:text="Level 2"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnLevel3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level3"
            android:text="Level 3"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnLevel4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level4"
            android:text="Level 4"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnLevel5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level5"
            android:text="Level 5"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnLevel6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level6"
            android:text="Level 6"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnLevel7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level7"
            android:text="Level 7"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnLevel8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level8"
            android:text="Level 8"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnLevel9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:onClick="level9"
            android:text="Level 9"
            app:layout_column="2"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>